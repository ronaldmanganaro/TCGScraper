{
  "name": "Streamlit Dev Container",
  "dockerFile": "../docker/Dockerfile.streamlit-dev",
  "context": "..",
  "workspaceFolder": "/TCGScraper",
  "mounts": [
    "source=${localWorkspaceFolder},target=/TCGScraper,type=bind"
  ],
  "portsAttributes": {
    "80": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [80],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "cweijan.vscode-postgresql-client2"
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  },
  "envFile": "../docker/.env",
  "postStartCommand": "streamlit run /TCGScraper/streamlit/app.py --server.port ${SERVER_PORT:-80} --server.headless true"
}